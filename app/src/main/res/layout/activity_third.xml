<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg"
    tools:context="com.pratik.cardviews.ThirdActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie Title"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="50dp"
                android:textAlignment="center"
                android:id="@+id/thirdMovieTitle"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thirdMovieTitle"
                android:layout_margin="10dp"
                android:textColor="#ccc"
                android:id="@+id/thirdMovieInfo"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ghost_button"
                android:text="Web Info"
                android:textColor="#fff"
                android:id="@+id/xmlMovieInfo"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/thirdMovieInfo"/>
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
